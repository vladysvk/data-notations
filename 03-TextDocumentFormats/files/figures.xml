<?xml version="1.0" encoding="UTF-8"?>
<geometricFigures>
    <figure>
        <name>Circle</name>
        <type>2D</type>
        <properties>
            <property>Radius</property>
            <property>Diameter</property>
        </properties>
        <formulas>
            <area>π * radius^2</area>
            <perimeter>2 * π * radius</perimeter>
        </formulas>
    </figure>
    <figure>
        <name>Square</name>
        <type>2D</type>
        <properties>
            <property>Side Length</property>
        </properties>
        <formulas>
            <area>side^2</area>
            <perimeter>4 * side</perimeter>
        </formulas>
    </figure>
    <figure>
        <name>Cube</name>
        <type>3D</type>
        <properties>
            <property>Edge</property>
            <property>Vertex</property>
            <property>Face</property>
        </properties>
        <formulas>
            <volume>edge^3</volume>
            <totalSurfaceArea>6*edge^2</totalSurfaceArea>
            <lateralSurfaceArea>4*edge^2</lateralSurfaceArea>
            <diagonalOfCube>edge*sqrt(3)</diagonalOfCube>
        </formulas>
    </figure>
</geometricFigures>